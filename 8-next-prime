public Integer nextPrime(Integer num) {
    Integer nextNum = num;
    boolean isNextPrime = false;
    while (isNextPrime == false) {
        nextNum++;
        isNextPrime = isPrime(nextNum);
    }
    return nextNum;
}

public Boolean isPrime(Integer num) {
    for (Integer i = 2; i < num; i++) {
        if (Math.mod(num, i) == 0)
            return false;
    }
    return true;
}