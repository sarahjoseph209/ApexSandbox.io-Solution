public String reverseWordsInASentence(String sentence){
    if(sentence == null ){

        return null;

    }

    List<String> sentenceSplit = sentence.split(' ');
    String reverse = '';

    for(Integer i = sentenceSplit.size()-1;i>=0;i--){
        if(reverse == ''){
        reverse += sentenceSplit[i];
        }
        else{
         reverse += ' '+ sentenceSplit[i];
        }
    }
    return reverse;
}